<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image_container"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="32dp">
            <ImageView
                android:id="@+id/iv_plant_list_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/plant_name_plant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/cv_image_container"
            android:layout_toStartOf="@id/iv_delete"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="12dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_freq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_delete"
            android:layout_toEndOf="@id/cv_image_container"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/plant_name_plant_list"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/primary_resources"
            android:src="@drawable/ic_remove"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="6dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>